<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/helpLinearLayout1">

	<ScrollView android:id="@+id/horizontalScrollView1"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">
			<Button android:gravity="fill" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_weight="1"
				android:text="@string/back" android:id="@+id/helpGoBackButton"></Button>

			<TextView android:layout_height="wrap_content" android:id="@+id/textView2"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/othellolegendshelp" android:layout_marginLeft="5px"
				android:layout_width="fill_parent"></TextView>

			<TextView android:layout_marginTop="10px" android:text="@string/help1"
				android:id="@+id/textView15" android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginLeft="5px" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>

			<ImageView
			    android:id="@+id/imageView1"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:src="@drawable/help" android:layout_marginTop="10px"/>
			
			<TextView android:layout_marginTop="10px" android:text="@string/help1_2"
				android:id="@+id/textView15" android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginLeft="5px" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>
			
			<TextView android:layout_marginTop="10px" android:id="@+id/textView3"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/help1_5" android:layout_marginLeft="5px"
				android:layout_width="fill_parent" android:layout_height="fill_parent"></TextView>

			<TextView android:layout_marginTop="10px" android:text="@string/help2"
				android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginLeft="5px" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>

			<TextView android:layout_marginTop="10px" android:id="@+id/textView1"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/help3" android:layout_marginLeft="5px"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>

		</LinearLayout>

	</ScrollView>
</LinearLayout>
